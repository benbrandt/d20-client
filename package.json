{
  "author": "Ben Brandt",
  "name": "d20-client",
  "version": "0.1.0",
  "repository": "https://github.com/benbrandt/d20-client",
  "license": "(MIT OR Apache-2.0)",
  "scripts": {
    "start": "NODE_ENV=development TS_NODE_PROJECT=\"webpack.tsconfig.json\" webpack-dev-server -d --mode=development",
    "build": "NODE_ENV=production TS_NODE_PROJECT=\"webpack.tsconfig.json\" webpack --mode=production && yarn optimize-wasm",
    "test": "wasm-pack test --node",
    "optimize-wasm": "TS_NODE_PROJECT=\"webpack.tsconfig.json\" ts-node scripts/optimize_wasm.ts",
    "lint": "eslint \"js/**/*.ts\""
  },
  "browserslist": [
    "Chrome >=57 and >0.2%",
    "Edge >= 16 and >0.2%",
    "Firefox >= 52 and >0.2%",
    "Opera >= 44 and >0.2%",
    "Safari >= 11 and >0.2%",
    "Android >= 57 and >0.2%",
    "ChromeAndroid >= 57 and >0.2%",
    "FirefoxAndroid >= 52 and >0.2%",
    "iOS >= 11 and >0.2%",
    "Samsung >= 7 and >0.2%",
    "OperaMobile >= 46 and >0.2%",
    "not dead"
  ],
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:import/errors",
      "plugin:import/warnings",
      "plugin:import/typescript",
      "plugin:prettier/recommended",
      "prettier/@typescript-eslint"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.4.4",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/plugin-transform-runtime": "^7.4.4",
